{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist"
  },
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": [
    "src/main/ts/**/*",
    "src/test/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
